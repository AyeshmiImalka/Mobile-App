<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".activities.SplashActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_80sdp"
        android:layout_height="@dimen/dimen_80sdp"
        android:cardBackgroundColor="@color/PaleVioletRed"
        android:layout_margin="@dimen/dimen_10sdp"
        app:cardCornerRadius="@dimen/dimen_10sdp"
        app:cardElevation="@dimen/dimen_10sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_10sdp">

        <ImageView
            android:id="@+id/img_facecare"
            android:layout_width="@dimen/dimen_24sdp"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/dimen_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="-20dp"
            android:src="@drawable/facecare"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin Care"
            android:textSize="@dimen/dimen_8ssp"
            android:textColor="@color/black"
            android:maxEms="10"
            android:maxLines="2"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/gilroy_bold"
            android:paddingStart="@dimen/dimen_10sdp"/>

        </RelativeLayout>






</LinearLayout>